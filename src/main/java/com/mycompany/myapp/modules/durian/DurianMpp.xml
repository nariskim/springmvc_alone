<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mycompany.myapp.modules.durian.DurianMpp">

	<resultMap id="resultMapObj"
		type="com.mycompany.myapp.modules.durian.Durian"></resultMap>


	<select id="selectList" resultMap="resultMapObj">
		
		SELECT
		a.oymbSeq
		, a.oymbId
		, a.oymbName
		, a.oymbGenderCd
		, b.oympNumber
		, c.oymeEmailFull
		FROM
		oyMember a
		LEFT JOIN oymbPhone b on b.oympSeq = a.oymbSeq
		LEFT JOIN oymbEmail c on c.oymeSeq = a.oymbSeq 
		
	</select>
	
	
